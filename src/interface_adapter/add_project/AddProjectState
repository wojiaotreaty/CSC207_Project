package interface_adapter.add_project;

public class AddProjectState {
    private String projectTitle = "";
    private String projectDetails = "";
    private String projectDeadline = "";
    private String addProjectError = null;

    public AddProjectState(AddProjectState copy) {
        projectTitle = copy.projectTitle;
        projectDetails = copy.projectDetails;
        projectDeadline = copy.projectDeadline;
        addProjectError = copy.addProjectError;
    }

    public AddProjectState() {
    }

    public String getProjectTitle() {
        return projectTitle;
    }

    public String getProjectDetails() {
        return projectDetails;
    }
    public String getProjectDeadline() { return projectDeadline; }
    public String getAddProjectError() { return addProjectError; }

    public void setProjectTitle(String projectTitle) {
        this.projectTitle = projectTitle;
    }

    public void setProjectDetails(String projectDetails) {
        this.projectDetails = projectDetails;
    }
    public void setProjectDeadline(String projectDeadline) { this.projectDeadline = projectDeadline; }
    public void setAddProjectError(String addProjectError) { this.addProjectError = addProjectError; }

    @Override
    public String toString() {
        return "AddProjectState{" +
                "projectTitle='" + projectTitle + '\'' +
                ", projectDetails='" + projectDetails + '\'' +
                ", projectDeadline='" + projectDeadline + '\'' +
                '}';
    }
}
